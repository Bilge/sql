{
    "name": "amphp/sql",
    "description": "Asynchronous SQL client for Amp.",
    "keywords": [
        "database",
        "db",
        "sql",
        "asynchronous",
        "async"
    ],
    "homepage": "http://amphp.org",
    "license": "MIT",
    "require": {
        "php": ">=8",
        "amphp/amp": "^3-dev"
    },
    "require-dev": {
        "amphp/php-cs-fixer-config": "dev-master",
        "amphp/phpunit-util": "^2-dev",
        "phpunit/phpunit": "^9",
        "psalm/phar": "^3.11@dev"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Sql\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Sql\\Test\\": "test"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff",
        "test": "phpunit --coverage-text"
    }
}
